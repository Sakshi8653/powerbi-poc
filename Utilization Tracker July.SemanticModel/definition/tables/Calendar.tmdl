	column Workdays = ```
			
			IF(
			    'Calendar'[Weekday] < 6,  -- Include Monday to Friday (Weekday < 6)
			    1,                       -- Assign 1 for a working day
			    0                        -- Assign 0 for weekends
			)
			
			```
		formatString: 0
		lineageTag: a4ff18be-dc59-4563-8502-09447b5b1283
		summarizeBy: sum

		annotation SummarizationSetBy = Automatic

	column 'Total Working Hours' = ```
			
			VAR StartDate = MIN('DateCrossJoin'[From Month]) -- Earliest date in the slicer
			VAR EndDate = 
			    IF(
			        MAX('DateCrossJoin'[To_Month]) > TODAY(), 
			        TODAY(), 
			        MAX('DateCrossJoin'[To_Month]) -- Use today if the end date is in the future
			    )
			
			RETURN
			SUMX(
			    FILTER(
			        'Calendar', 
			        'Calendar'[Date] >= StartDate &&
			        'Calendar'[Date] <= EndDate &&
			        'Calendar'[Weekday] < 6 -- Exclude weekends (Monday to Friday only)
			    ),
			    8 -- 8 hours per working day
			)
			
			```
		formatString: 0
		lineageTag: ddcbefaa-bcab-4756-8630-5251c5b28d04
		summarizeBy: sum

		annotation SummarizationSetBy = Automatic

	partition Calendar = calculated
		mode: import
		source = ```
				ADDCOLUMNS(
				    CALENDAR(MIN('DateCrossJoin'[From Month]), MAX('DateCrossJoin'[To_Month])),
				    "Weekday", WEEKDAY([Date], 2)
				)
				
				```

